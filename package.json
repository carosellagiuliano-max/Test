{
  "name": "coiffeur-platform",
  "version": "1.0.0",
  "description": "Modern coiffeur platform with booking, payments, and management",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:prod": "NODE_ENV=production turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:integration": "vitest --config vitest.config.integration.ts",
    "test:rls": "node scripts/test-rls.mjs",
    "test:webhook": "node scripts/test-webhooks.mjs",
    "test:load": "k6 run tests/load/booking-load-test.js",
    "test:all": "pnpm test && pnpm test:e2e",
    "qa:pipeline": "node scripts/qa-pipeline.mjs",
    "qa:quick": "pnpm test:unit && pnpm lint && pnpm type-check",
    "qa:pre-deploy": "pnpm lint && pnpm type-check && pnpm test:unit && pnpm build:prod",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "clean:all": "pnpm clean && rm -rf node_modules **/node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > packages/types/src/database.ts",
    "db:migration": "supabase migration new",
    "db:reset": "supabase db reset",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:push": "supabase db push",
    "db:link": "supabase link --project-ref $SUPABASE_PROJECT_ID",
    "deploy:functions": "supabase functions deploy",
    "deploy:staging": "pnpm qa:pre-deploy && netlify deploy",
    "deploy:prod": "pnpm qa:pre-deploy && netlify deploy --prod",
    "setup": "pnpm install && pnpm build",
    "setup:test": "playwright install && pnpm test:coverage",
    "prepare": "husky install",
    "verify": "pnpm format:check && pnpm lint && pnpm type-check && pnpm test:unit"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "chalk": "^5.6.2",
    "eslint": "^8.54.0",
    "husky": "^8.0.0",
    "jsdom": "^23.0.0",
    "lighthouse": "^11.7.1",
    "lint-staged": "^15.1.0",
    "msw": "^2.0.0",
    "ora": "^7.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/resource-timeline": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.38.0",
    "@types/qrcode": "^1.5.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "qrcode": "^1.5.4",
    "react-hook-form": "^7.64.0",
    "recharts": "^3.2.1",
    "zod": "^4.1.11"
  }
}