# Production Environment Variables Template
# COPY THIS FILE to .env.production.local and fill in your production values
# DO NOT commit .env.production.local to version control

# ===================================
# SUPABASE CONFIGURATION
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SERVICE_ROLE_KEY
SUPABASE_PROJECT_ID=YOUR_PRODUCTION_PROJECT_ID
SUPABASE_ACCESS_TOKEN=YOUR_SUPABASE_ACCESS_TOKEN

# Database Direct Connection (for migrations)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres

# ===================================
# AUTHENTICATION
# ===================================
NEXTAUTH_URL=https://coiffeur-platform.ch
NEXTAUTH_SECRET=YOUR_PRODUCTION_SECRET_KEY_MIN_32_CHARS

# ===================================
# PAYMENT CONFIGURATION - STRIPE
# ===================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_LIVE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_LIVE_SECRET
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# ===================================
# PAYMENT CONFIGURATION - SUMUP
# ===================================
SUMUP_APP_ID=YOUR_SUMUP_APP_ID
SUMUP_APP_SECRET=YOUR_SUMUP_APP_SECRET
SUMUP_AFFILIATE_KEY=YOUR_SUMUP_AFFILIATE_KEY
SUMUP_ENVIRONMENT=production
SUMUP_WEBHOOK_SECRET=YOUR_SUMUP_WEBHOOK_SECRET

# ===================================
# EMAIL CONFIGURATION (RESEND)
# ===================================
RESEND_API_KEY=re_YOUR_RESEND_API_KEY
RESEND_FROM_EMAIL=noreply@coiffeur-platform.ch
RESEND_REPLY_TO=info@coiffeur-platform.ch

# ===================================
# SMS CONFIGURATION (TWILIO)
# ===================================
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+41XXXXXXXXX
TWILIO_MESSAGING_SERVICE_SID=YOUR_MESSAGING_SERVICE_SID

# ===================================
# FILE STORAGE (CLOUDINARY)
# ===================================
CLOUDINARY_CLOUD_NAME=YOUR_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_API_KEY
CLOUDINARY_API_SECRET=YOUR_API_SECRET
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=YOUR_CLOUD_NAME

# ===================================
# APPLICATION CONFIGURATION
# ===================================
NEXT_PUBLIC_APP_URL=https://coiffeur-platform.ch
NEXT_PUBLIC_APP_NAME="Coiffeur Platform"
NEXT_PUBLIC_DEFAULT_LOCALE=de
NEXT_PUBLIC_SUPPORTED_LOCALES=de,en,fr,it

# ===================================
# BUSINESS CONFIGURATION
# ===================================
BUSINESS_NAME="Your Salon Name"
BUSINESS_ADDRESS="Your Business Address, CH-8000 Zürich"
BUSINESS_PHONE="+41 XX XXX XX XX"
BUSINESS_EMAIL="info@yoursalon.ch"
BUSINESS_VAT_NUMBER="CHE-XXX.XXX.XXX"
BUSINESS_WEBSITE="https://yoursalon.ch"

# ===================================
# SWISS QR-BILL CONFIGURATION
# ===================================
QR_BILL_IBAN="CH93 0076 2011 6238 5295 7"
QR_BILL_CREDITOR_NAME="Your Business GmbH"
QR_BILL_CREDITOR_ADDRESS="Musterstrasse 123"
QR_BILL_CREDITOR_ZIP="8000"
QR_BILL_CREDITOR_CITY="Zürich"
QR_BILL_CREDITOR_COUNTRY="CH"

# ===================================
# ANALYTICS & MONITORING
# ===================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_KEY@o0.ingest.sentry.io/YOUR_PROJECT_ID
SENTRY_ORG=your-org
SENTRY_PROJECT=coiffeur-platform
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_KEY@o0.ingest.sentry.io/YOUR_PROJECT_ID

# ===================================
# CACHE & PERFORMANCE
# ===================================
REDIS_URL=redis://default:PASSWORD@YOUR-REDIS-HOST:6379
REDIS_TLS_URL=rediss://default:PASSWORD@YOUR-REDIS-HOST:6380

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_ONLINE_BOOKING=true
FEATURE_PRODUCT_SALES=true
FEATURE_NOTIFICATIONS=true
FEATURE_REPORTS=true
FEATURE_MULTI_LOCATION=false
FEATURE_LOYALTY_PROGRAM=false

# ===================================
# BOOKING CONFIGURATION
# ===================================
DEFAULT_BOOKING_ADVANCE_DAYS=90
DEFAULT_MIN_BOOKING_HOURS=2
DEFAULT_APPOINTMENT_DURATION=60
BOOKING_CANCELLATION_HOURS=24
MAX_BOOKINGS_PER_DAY=50

# ===================================
# PAYMENT CONFIGURATION
# ===================================
DEFAULT_CURRENCY=CHF
REQUIRE_DEPOSIT=true
DEFAULT_DEPOSIT_PERCENTAGE=20
PAYMENT_TIMEOUT_MINUTES=30
AUTO_CANCEL_UNPAID_BOOKINGS=true

# ===================================
# NOTIFICATION CONFIGURATION
# ===================================
DEFAULT_REMINDER_HOURS=24,2
MAX_SMS_LENGTH=160
EMAIL_TEMPLATE_THEME=light
SEND_BOOKING_CONFIRMATION=true
SEND_REMINDER_NOTIFICATIONS=true
SEND_MARKETING_EMAILS=false

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===================================
# SECURITY
# ===================================
CORS_ALLOWED_ORIGINS=https://coiffeur-platform.ch,https://www.coiffeur-platform.ch
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_32_CHARS

# ===================================
# DEPLOYMENT & CI/CD
# ===================================
NETLIFY_AUTH_TOKEN=YOUR_NETLIFY_AUTH_TOKEN
NETLIFY_SITE_ID=YOUR_NETLIFY_SITE_ID
GITHUB_TOKEN=YOUR_GITHUB_TOKEN

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=error
DEBUG=false
ENABLE_PERFORMANCE_MONITORING=true

# ===================================
# BACKUP & DISASTER RECOVERY
# ===================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 3 * * *"

# ===================================
# SWISS COMPLIANCE
# ===================================
DATA_RETENTION_YEARS=10
ENABLE_GDPR_FEATURES=true
ENABLE_REVDSG_COMPLIANCE=true
SWISS_VAT_RATE=7.7
SWISS_VAT_RATE_REDUCED=2.5
SWISS_VAT_RATE_SPECIAL=3.7